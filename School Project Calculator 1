#include <iostream>
#include <vector>
#include <iomanip>
using namespace std;

int main()
{
    int numUsers;
    
    cout << "Enter number of users: ";
    cin >> numUsers;
    
    vector<double> balances(numUsers);
    vector<double> increases(numUsers);
    vector<char> boughtStock(numUsers);

    for(int i = 0; i < numUsers; i++)
    {
        cout << "\nUser " << i+1 << " - Bought the stock? (y/n): ";
        cin >> boughtStock[i];
        
        cout << "User " << i+1 << " current balance: $";
        cin >> balances[i];
        
        if(toupper(boughtStock[i]) == 'Y')
        {
            cout << "User " << i+1 << " profit to add: $";
            cin >> increases[i];
        }
        else
        {
            increases[i] = 0;
        }
    }

    cout << "\n=== Final Balances ===" << endl;
    for(int i = 0; i < numUsers; i++)
    {
        double newBalance = balances[i] + increases[i];
        cout << "User " << i+1 << ": $" << fixed << setprecision(2) << newBalance;
        
        if(toupper(boughtStock[i]) == 'Y')
        {
            cout << " (including $" << increases[i] << " profit)";
        }
        
        cout << endl;
    }

    return 0;
}
